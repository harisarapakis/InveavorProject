@model CoreInde.Models.EmpSkills

@{
    ViewData["Title"] = "Create";
}

<br />
<h3>Add a skill to the Employee</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Employee3Id" class="control-label"></label>
                <select asp-for="Employee3Id" class ="form-control" asp-items="ViewBag.Employee3Id"></select>
            </div>
            <div class="form-group">
                <label asp-for="Skills3Id" class="control-label"></label>
                <select asp-for="Skills3Id" class ="form-control" asp-items="ViewBag.Skills3Id"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
